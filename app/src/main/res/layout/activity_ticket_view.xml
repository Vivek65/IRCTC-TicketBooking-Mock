<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baloons"
    tools:context="com.example.vivekbhalodiya.railticket.feature.ticketview.TicketViewActivity">
  <android.support.v7.widget.Toolbar
      android:id="@+id/my_toolbar"
      android:layout_gravity="top"
      android:layout_width="match_parent"
      android:layout_height="?attr/actionBarSize"
      android:background="@color/colorPrimary"
      android:elevation="0dp"
      android:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    <TextView
        android:text="Your Ticket"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:gravity="start|fill_vertical"/>
  </android.support.v7.widget.Toolbar>

  <LinearLayout
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center_vertical">
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="20dp"
      app:cardCornerRadius="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp">
        <TextView
            android:id="@+id/ticket_from_stn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Ahmedabad Jn - "/>
        <TextView
            android:id="@+id/ticket_to_stn_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Hyderabad Jn"/>

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:paddingHorizontal="5dp"
          android:paddingVertical="2dp">
        <TextView
            android:id="@+id/ticket_train_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456 - "/>
        <TextView
            android:id="@+id/ticket_train_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hussain Sagar Exp"/>

      </LinearLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="20dp"
      android:layout_marginTop="5dp"
      app:cardCornerRadius="5dp">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <TextView
          android:id="@+id/ticket_pnr_number"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/colorPrimary"
          android:text="PNR - 1234556"
          android:padding="5dp"
          android:textStyle="bold"
          android:layout_gravity="center"/>
      <FrameLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp">
        <TextView
            android:id="@+id/ticket_src_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="12:20"/>
        <TextView
            android:id="@+id/ticket_dest_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="22:20"/>
      </FrameLayout>
      <FrameLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp">
        <TextView
            android:id="@+id/ticket_src_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23-03-2018"/>
        <TextView
            android:id="@+id/ticket_dest_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="24-03-2018"/>
      </FrameLayout>
      <FrameLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="5dp">
        <LinearLayout
            android:layout_gravity="start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ticket_src_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADI"/>
        <TextView
            android:id="@+id/ticket_src_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text=" - Ahmedabad Jn"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ticket_des_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hyd"/>
        <TextView
            android:id="@+id/ticket_dest_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text=" - Hyderabad Jn"/>
        </LinearLayout>
      </FrameLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="5dp"
      android:layout_marginHorizontal="20dp"
      app:cardCornerRadius="5dp">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textStyle="bold"
          android:textSize="16sp"
          android:padding="5dp"
          android:text="Name"/>
        <TextView
            android:id="@+id/ticket_passenger_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="end"
            android:text=" Afroz"/>
      </FrameLayout>
      <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="Preference"/>
        <TextView
            android:id="@+id/ticket_passenger_pref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="end"
            android:text="3A"/>
      </FrameLayout>
      <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="Status"/>
        <TextView
            android:id="@+id/ticket_passenger_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:text="RAC 35"/>
      </FrameLayout>
      <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:text="Fare"/>
        <TextView
            android:id="@+id/ticket_passenger_fare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16sp"
            android:padding="5dp"
            android:gravity="end"
            android:textColor="@color/colorPrimary"
            android:text="Rs. 645"/>
      </FrameLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  <android.support.v7.widget.CardView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="5dp"
      app:cardCornerRadius="5dp">

    <ImageView
        android:id="@+id/ticket_qr_code"
        android:layout_width="150dp"
        android:layout_height="150dp"/>
  </android.support.v7.widget.CardView>
  </LinearLayout>



</FrameLayout>
