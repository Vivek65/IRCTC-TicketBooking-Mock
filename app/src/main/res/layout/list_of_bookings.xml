<?xml version="1.0" encoding="utf-8"?>
<layout>
  <LinearLayout
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/lightGrey"
      android:padding="15dp">
  <android.support.v7.widget.CardView
      android:id="@+id/my_bookings_cardview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
      <TextView
          android:id="@+id/booking_journey_date"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Journey Date - 22/03/18"
          android:gravity="center"
          android:background="@color/lightPrimaryColor"
          android:textSize="16sp"
          android:textStyle="bold"
          android:padding="8dp"
          android:textColor="@color/colorPrimary"
          android:layout_gravity="center"/>
      <TextView
          android:id="@+id/booking_pnr"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="PNR - 22222"
          android:padding="8dp"
          android:textStyle="bold"
          android:textAllCaps="true"
          android:textColor="@color/black"
          android:layout_gravity="center"/>
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/booking_src_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="2dp"
            android:layout_gravity="start"
            android:text="Ahamedabasd Jn"/>
        <TextView
            android:id="@+id/booking_dst_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:padding="2dp"
            android:layout_gravity="end"
            android:text="Hyderabad Jn"/>
      </FrameLayout>
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
        <TextView
            android:id="@+id/booking_src_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="start"
            android:text="05:33"/>
        <TextView
            android:id="@+id/booking_dst_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_gravity="end"
            android:text="12:23"/>
      </FrameLayout>
    </LinearLayout>
  </android.support.v7.widget.CardView>
  </LinearLayout>
</layout>